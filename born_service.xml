                            </group>
                        </group>

                        <notebook>
                            <page string="服务履历">
                                <field name="line_ids">
                                    <tree string="Service  Lines" >
                                        <field name="employee_id"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="state"/>
                                    </tree>

                                </field>
                            </page>
                            <page string="付款履历">
                                <field name="pay_ids">
                                    <tree string="Pay  Lines" >
                                        <field name="customer_name"/>
                                        <field name="create_date" string="创建日期"/>
                                        <field name="pay_method"/>
                                        <field name="amount"/>
                                        <field name="name"/>
                                        <field name="account"/>
                                        <field name="pay_date"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
            			<div>
                            <field name="remark"/>
                        </div>
            		</sheet>
            	</form>
            </field>
        </record>

